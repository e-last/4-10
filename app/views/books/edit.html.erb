<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
      <div id="error_explanation_edit">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">title</label>
        <%= f.text_field :title, autofocus: true, id:"book_title", class:"form-control name"%>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, autofocus: true, id:"book_body", class:"form-control name"%>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book", class:"btn btn-secondary", class:"btn btn-success" %>
      </div>
    <%= link_to "Show", book_path(@book.id) %>|
    <%= link_to "Back", books_path %>
      <% end %>