<div class='container'>
  <div class='row'>

    <%= render 'users/userinfonewbook', user: @user, book:@book %>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to user_path(@showbook.user.id) do %>
              <%= attachment_image_tag @showbook.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %><br>
              <%= @showbook.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@showbook.id) do %>
              <%= @showbook.title %>
            <% end %>
          </td>
          <td><%= @showbook.body%></td>
          <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@showbook.id), class:"btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@showbook.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>

  </div>
</div>